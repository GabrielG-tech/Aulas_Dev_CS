@page
@model BancoWebApp.Pages.Contas.CreateModel
@{
    ViewData["Title"] = "Criar conta";
}

<h1>Criar</h1>
<h4>Conta</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Conta.Nome" class="control-label"></label>
                <input asp-for="Conta.Nome" class="form-control"/>
                <span asp-validation-for="Conta.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Conta.Saldo" class="control-label"></label>
                <input asp-for="Conta.Saldo" class="form-control" />
                <span asp-validation-for="Conta.Saldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
